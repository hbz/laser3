    margin-top: 1.7em!important;
}
/*------------------------------------
         Buttons for debug infos
  ------------------------------------*/
.la-debugInfos {
    position: fixed;
    z-index: @debugInfoZIndex
}
.ui.button.la-js-addListValue {
    margin-bottom: 1em;
}

#showSystemInfo {
    bottom: 45px;
    right: 1.5vw;
}

#showDebugInfo {
    bottom: 45px;
    right: 1.5vw;
    margin-right: 55px;
}

#system-profiler {
    bottom: 10px;
    right: 1.5vw;
}
@media only screen and (min-width: @widescreenMonitorBreakpoint) {
    #system-profiler, #showSystemInfo, #showDebugInfo {
        right: 2vw;
    }
}
@media only screen and (min-width: @extraWidescreenMonitorBreakpoint) {
    #system-profiler, #showSystemInfo, #showDebugInfo {
        right: 9vw;
    }
}