// annual rings

.ui.label.la-annual-rings {
  position: relative;
  padding-left: 0.2em;
  padding-right: 0.2em;
  margin-bottom: 1.2em;
  background-color: @laSecondaryBackground;
  border: 1px solid @laDecorationColor;
  vertical-align: super;
  margin: 0 1.142857em;
  .ui.tiny.label {
    font-size: .45rem;
    vertical-align: middle;
  }
  .icon {
    font-size: 1.3em;
    width: auto;
    margin: 0em @iconDistance 0em @iconDistance;
    vertical-align: sub;
  }
  >a {
    opacity: 0.7;
    text-decoration: none;
  }
  i.disabled.icon {
    opacity: 0!important;
    margin: 0 0 0 .1em;
  }
  .la-status-active {
    background-color: @green;
    opacity: 1;
    font-weight: bolder;
    color: white;
  }
  .la-status-inactive {
    background-color: @red;
    opacity: 1;
    font-weight: bolder;
    color: white;
  }
  .la-status-else {
    background-color: @yellow;
    opacity: 1;
    font-weight: bolder;
    color: white;
  }
  .la-annual-rings-text {
    display: inline-block;
    padding-top: 1px;
    vertical-align: middle;
    padding-right: 0.5em;
  }
}
