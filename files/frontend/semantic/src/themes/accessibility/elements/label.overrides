// not used yet
//left side
.ui.left-tag.labels .label,
.ui.left-tag.label {
  margin-left: 1em;
  position: relative;
  padding-left: @tagHorizontalPadding;
  padding-right: @tagHorizontalPadding;

  border-radius: 0em @borderRadius @borderRadius 0em;
  transition: @tagTransition;
}
.ui.left-tag.labels .label:before,
.ui.left-tag.label:before {
  position: absolute;
  transform: translateY(-50%) translateX(50%) rotate(-45deg);

  top: @tagTriangleTopOffset;
  right: @tagTriangleRightOffset;
  content: '';

  background-color: inherit;
  background-image: @tagTriangleBackgroundImage;

  width: @tagTriangleSize;
  height: @tagTriangleSize;
  transition: @tagTransition;
}
//right-side
.ui.right-tag.labels .label,
.ui.right-tag.label {
  margin-left: 1em;
  position: relative;
  padding-left: @tagHorizontalPadding;
  padding-right: @tagHorizontalPadding;

  border-radius: 0em @borderRadius @borderRadius 0em;
  transition: @tagTransition;
}
.ui.right-tag.labels .label:after,
.ui.right-tag.label:after {
  position: absolute;
  transform: translateY(-50%) translateX(50%) rotate(-45deg);
  top: @tagTriangleTopOffset;
  //left: @tagTriangleRightOffset;
  content: '';
  background-color: inherit;
  background-image: @tagTriangleBackgroundImage;
  width: @tagTriangleSize;
  height: @tagTriangleSize;
  transition: @tagTransition;
}

